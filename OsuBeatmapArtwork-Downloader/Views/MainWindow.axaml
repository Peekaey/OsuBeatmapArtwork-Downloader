<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OsuBeatmapArtwork_Downloader.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="OsuBeatmapArtwork_Downloader.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Height="700"
        Width="700"
        Icon="/Assets/avalonia-logo.ico"
        Title="OsuBeatmapArtwork_Downloader"
        TransparencyLevelHint="AcrylicBlur"
        Background="Transparent"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">
  
  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <DockPanel>
    <!-- Custom Title Bar with Acrylic Effect -->
    <ExperimentalAcrylicBorder DockPanel.Dock="Top" Height="40">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                     TintColor="{DynamicResource AcrylicBackgroundColor}"
                                     TintOpacity="1"
                                     MaterialOpacity="0.65" />
      </ExperimentalAcrylicBorder.Material>
      <!-- Content inside the acrylic title bar -->
      <Grid ZIndex="100">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!-- Draggable Area -->
        <Border Background="Transparent"
                VerticalAlignment="Center"
                PointerPressed="TitleBar_OnPointerPressed">
          <TextBlock Text="Beatmap Artwork Downloader" 
                     VerticalAlignment="Center" 
                     Margin="10,0"
                     Foreground="{DynamicResource PrimaryForegroundColor}"/>
        </Border>
        <!-- Custom Window Buttons -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0">
          <Button Width="30" Height="25" Click="Minimise">
            <Path Data="{StaticResource MinimiseIcon}"
                  Fill="{DynamicResource PrimaryForegroundColor}"
                  Stretch="Uniform"
                  VerticalAlignment="Center"/>
          </Button>
          <Button Width="30" Height="25" Click="Maximise">
            <Path Data="{StaticResource MaximiseIcon}"
                  Fill="{DynamicResource PrimaryForegroundColor}"
                  StrokeThickness="2"
                  Stretch="Uniform"
                  VerticalAlignment="Center"/>
            </Button>
          <Button Width="30" Height="25" Click="Close">
            <Path Data="{StaticResource CloseIcon}"
                  Stroke="{DynamicResource PrimaryForegroundColor}"
                  StrokeThickness="1.06"
                  Stretch="Uniform"
                  VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
      </Grid>
    </ExperimentalAcrylicBorder>

    <!-- Second Bar for Additional Controls (e.g., Settings) -->
    <ExperimentalAcrylicBorder DockPanel.Dock="Top" Height="32">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                     TintColor="{DynamicResource AcrylicBackgroundColor}"
                                     TintOpacity="1"
                                     MaterialOpacity="0.65" />
      </ExperimentalAcrylicBorder.Material>
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!-- Optional: Place left-side content here if needed -->
        <StackPanel Orientation="Horizontal"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0">
          <!-- Settings Icon Button -->
          <Button VerticalContentAlignment="Center"
                  HorizontalContentAlignment="Center"
                  Padding="10,5"
                  Height="30"
                  Click="RenderSettingsPage"> 
            <StackPanel Orientation="Horizontal"
                        Spacing="5"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
              <Path Data="{StaticResource SettingsIcon}"
                    Width="16"
                    Height="16"
                    Fill="{DynamicResource PrimaryForegroundColor}" />
              <TextBlock Text="Settings"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         FontSize="13"
                         Foreground="{DynamicResource PrimaryForegroundColor}"/>
            </StackPanel>
          </Button>
        </StackPanel>
      </Grid>
    </ExperimentalAcrylicBorder>

    <!-- Main Content -->
    <Grid>
      <!-- Acrylic Background for Main Content -->
      <ExperimentalAcrylicBorder IsHitTestVisible="False">
        <ExperimentalAcrylicBorder.Material>
          <ExperimentalAcrylicMaterial BackgroundSource="Digger"
                                       TintColor="{DynamicResource AcrylicBackgroundColor}"
                                       TintOpacity="1"
                                       MaterialOpacity="0.65" />
        </ExperimentalAcrylicBorder.Material>
      </ExperimentalAcrylicBorder>
      <!-- Place your other main content here -->
      <StackPanel>
      <TextBlock Text="Enter Beatmap ID"
                 FontSize="24"
                 Margin="0,0,0,20"
                 HorizontalAlignment="Center"
                 Foreground="{DynamicResource PrimaryForegroundColor}"/>
      <TextBox Text="{Binding BeatmapId}"
               MinWidth="300"
               MaxHeight="30"
               HorizontalAlignment="Center"
               KeyDown="GetBeatmapForDownload">
      </TextBox>
      </StackPanel>
      <!-- Images Panel -->
      <ScrollViewer VerticalAlignment="Center" HorizontalAlignment="Center">
        <ItemsControl ItemsSource="{Binding BeatmapImagesBitmap}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Margin="10"/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Image Source="{Binding}" 
                     Margin="10"
                     Width="200"
                     Height="200"
                     Stretch="Uniform">
                <Image.ContextMenu>
                  <ContextMenu>
                    <MenuItem Header="Save Image As..." Click="SaveImageToDiskViaContextMenu" />
                  </ContextMenu>
                </Image.ContextMenu>
              </Image>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>
    </Grid>
  </DockPanel>
</Window>